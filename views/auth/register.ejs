</section class="mx-auto">
<section class="login flex justify-center ">
  <div class="w-1/2 items-center mr-10">
    <img class="rounded-full" src="/img/speacialdeal.png" alt="image is loading" height="900px" width="900px" />
  </div>
  <div class="w-full max-w-xs mt-20">
    <form action="/register" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <div class="mb-4">
        <% if(messages.error) { %>
          <span class="text-red-500 text-small">
            <%= messages.error %>
          </span>
          <%}%>

            <label class="block text-gray-700 text-sm font-bold mb-2" for="Enter your Email">
              username
            </label>
            <input name="name"
            value="<%= messages.name%>"
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="username" type="text" placeholder="username">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Enter your Email">
          Email
        </label>
        <input name="email"
        value="<%= messages.email%>"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="username" type="text" placeholder="Email" />
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input name="password"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="password" type="password" placeholder="Password" />
      </div>
      <div class="flex items-center justify-between">
        <button
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline"
          type="submit">
          sign up
        </button>
        <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
          Forgot Password?
        </a>
      </div>
    </form>
  </div>
</section>